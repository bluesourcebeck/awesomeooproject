    <title>1 Col Portfolio</title>

    <!-- Bootstrap Core CSS -->
    <link href="css/bootstrap.min 3.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="css/1-col-portfolio.css" rel="stylesheet">

