                    <%end%> -->

                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>



        <div class="container">

            <div class="row content-section text-center">
                <div class="col-lg-10 col-lg-offset-1">
                    <div class="row content-section">
                        <% @projects.each do |project| %>
                        <%= link_to project_path(project) do %>
                        <div class="col-md-3 col-sm-4">
                            <div class="dash-unit">                              
                                <div class="thumbnail">
                                    <%= image_tag project.images.first.name, size: 100*100%>
                                    <div class="caption">
                                        <h1><%=project.title%></h1>
                                        <small><%= project.tag%></small>
                                        <p><%=project.content%>
                                        </p>
                                     
                                    </div>
                                </div><!-- /thumbnail -->
                            </div>
                        </div>
                        <% end %>  
                        <% end %>

                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.col-lg-10 -->
            </div>
            <!-- /.row -->
        </div>

